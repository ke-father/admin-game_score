{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module":"esnext",
    "lib": ["esnext", "es2016", "es2017", "dom"],
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
