{
    "compilerOptions": {
        "baseUrl": ".",
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "module":"commonjs",
        "lib": ["ESNext", "ES2016", "ES2017", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "*": [
                "src/*",
                "test/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "esnext"
        },
        "transpileOnly": true,
        "files": true
    }
}
